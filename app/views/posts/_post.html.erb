<div>
  <%= turbo_frame_tag(dom_id(post)) do %>
    <div><%= post.title %></div>
    <div><%= link_to 'Show', post %></div>
    <div><%= link_to 'Edit', edit_post_path(post) %></div>
    <div><%= link_to 'Destroy', post, method: :delete, format: :turbo_stream, data: { confirm: 'Are you sure?' } %></div>
  <% end %>
</div>
