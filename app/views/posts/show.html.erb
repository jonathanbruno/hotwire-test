<p id="notice"><%= notice %></p>
<%= turbo_frame_tag dom_id(@post) do %>
  <p>
    <strong>Created At:</strong>
    <%= @post.created_at %>
  </p>

  <p>
    <strong>Updated At:</strong>
    <%= @post.updated_at %>
  </p>

  <p>
    <strong>Title:</strong>
    <%= @post.title %>
  </p>

  <p>
    <strong>Content:</strong>
    <%= @post.content %>
  </p>

  <%= link_to 'Edit', edit_post_path(@post) %> |
  <%= link_to 'Back', posts_path %>
<% end %>

<%= turbo_frame_tag 'footer' do %>
  updated
<% end %>